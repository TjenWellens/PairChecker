<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="eu.tjenwellens.pairtester"
          android:versionCode="3"
          android:versionName="1.0">
    
    <application android:name="eu.tjenwellens.pairtester.PairTesterApplication" 
                 android:icon="@drawable/pairchecker" 
                 android:label="@string/app_name" 
    >
        <!--Lists-->
        <activity android:name=".activities.ListsActivity"
                  android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Main-->
        <activity android:name=".activities.MainActivity"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
        >
        </activity>
        
        <!--Start-->
        <activity android:name=".activities.StartActivity" 
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
        >
        </activity>
        
        <!--Overview-->
        <activity android:name=".activities.OverviewActivity"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
        >
        </activity>

    </application>
</manifest> 
